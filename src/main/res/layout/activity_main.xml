<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A843FF"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/load_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/main_activity_top_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@drawable/loading"
            android:src="@drawable/loading" />

        <TextView
            android:id="@+id/main_activity_top_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下拉刷新"
            android:textSize="12sp" />
    </LinearLayout>
    <ScrollView
        android:id="@+id/act_main_sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/act_main_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/act_main_tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="北京"
            android:textColor="@color/colorFont"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/act_main_tv_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="晴转多云"
            android:textColor="@color/colorFont"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/act_main_tv_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 30°"
            android:textColor="@color/colorFont"
            android:textSize="60sp" />
        <TextView
            android:id="@+id/act_main_tv_today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/act_main_top"
            android:layout_marginLeft="20dp"
            android:text="星期日  今天"
            android:textColor="@color/colorFont" />
    </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/act_main_tv_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/line" />

    <LinearLayout
        android:id="@+id/act_main_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/act_main_btn_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTransparency"
            android:text="测试数据"
            android:textColor="@color/colorFont" />
    </LinearLayout>

    <TextView
        android:id="@+id/act_main_tv_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/line" />

    <LinearLayout
        android:id="@+id/act_main_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <ListView
            android:id="@+id/act_main_lv_weekp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>
    </LinearLayout>

    <TextView
        android:id="@+id/act_main_tv_line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/line" />

    <ImageButton
        android:id="@+id/act_main_iv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorTransparency"
        android:src="@drawable/menu" />
</LinearLayout>
